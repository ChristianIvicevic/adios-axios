{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/.idea", "!**/.next", "!**/.docker", "!**/.cache", "!**/dist", "!**/node_modules"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 110
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "error",
					"options": { "functions": ["cn"] }
				}
			},
			"complexity": {
				"noVoid": "off"
			},
			"correctness": {
				"noNodejsModules": "off",
				"noUndeclaredDependencies": "off",
				"useUniqueElementIds": "off"
			},
			"style": {
				"noDefaultExport": "off",
				"noImplicitBoolean": "off",
				"useNamingConvention": "off",
				"noParameterProperties": "off"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noUnknownAtRules": "off",
				"useAwait": "off"
			},
			"performance": {
				"noNamespaceImport": "off"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		},
		"parser": {
			"tailwindDirectives": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
